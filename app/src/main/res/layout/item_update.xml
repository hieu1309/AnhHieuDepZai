<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="UPDATE KHÁCH HÀNG"
            android:textColor="#008EFF"
            android:textSize="26dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtmamh_ud"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom"
            android:hint="Nhập mã môn học" />

        <EditText
            android:id="@+id/edttenmh_ud"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom"
            android:hint="Nhập tên môn học" />

        <EditText
            android:id="@+id/edtsotiet_ud"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom"
            android:hint="Nhập số tiết" />


        <Button
            android:layout_gravity="center"
            android:id="@+id/btnupdate_ud"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#77FF00"
            android:text="Update" />




    </LinearLayout>

</androidx.cardview.widget.CardView>